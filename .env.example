# Application Settings
APP_NAME=RAG Microservice
APP_ENV=production
DEBUG=false
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# API Security
API_KEY=your-secret-api-key-here
ALLOWED_ORIGINS=http://localhost,https://yourdomain.com

# Vector Database Configuration
VECTOR_DB_TYPE=chromadb
CHROMADB_PATH=./storage/chromadb
CHROMADB_COLLECTION_NAME=documents

# Document Processing Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,txt,md,doc,docx

# RAG Configuration
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.7
ENABLE_QUERY_CACHE=true
CACHE_TTL_SECONDS=3600

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Embedding Model Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# LLM Provider Configuration (Choose one)
# Option 1: OpenAI
OPENAI_API_KEY=sk-ijklmnopqrstuvwxijklmnopqrstuvwxijklmnop
OPENAI_MODEL=gpt-4-turbo-preview

# Option 2: Anthropic Claude
# ANTHROPIC_API_KEY=your-anthropic-api-key-here
# ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Option 3: Local LLM (Ollama)
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=llama2

# Default LLM Provider (openai, anthropic, or ollama)
LLM_PROVIDER=openai
