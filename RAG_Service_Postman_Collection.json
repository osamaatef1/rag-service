    {
      "name": "Examples - Complete Workflow",
      "item": [
        {
          "name": "Step 1: Ingest Document",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "content",
                  "value": "Python is a high-level, interpreted programming language created by Guido van Rossum in 1991. It is known for its simple and readable syntax. Python supports multiple programming paradigms including procedural, object-oriented, and functional programming. It has a comprehensive standard library and a vast ecosystem of third-party packages.",
                  "type": "text"
                },
                {
                  "key": "metadata",
                  "value": "{\"title\": \"Python Programming\", \"category\": \"tutorial\"}",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/v1/documents/ingest",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "documents", "ingest"]
            },
            "description": "First, ingest some content"
          },
          "response": []
        },
        {
          "name": "Step 2: Query the Document",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"Who created Python and when?\",\n  \"top_k\": 3\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/api/v1/query",
